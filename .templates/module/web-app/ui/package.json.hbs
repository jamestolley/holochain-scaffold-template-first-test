{
  "name": "@holochain-open-dev/{{kebab_case app_name}}",
  "version": "0.1.0",
  "scripts": {
    "start": "vite --clearScreen false --port $UI_PORT",
    "build": "npm run lint && tsc && npm run analyze -- --exclude dist",
    "lint": "eslint --ext .ts . && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --fix --ext .ts . && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "localize:extract": "lit-localize extract",
    "localize:build": "lit-localize build",
    "analyze": "cem analyze --litelement"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": ["dist"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/holochain-open-dev/{{kebab_case app_name}}.git"
  },
  "exports": {
    ".": "./dist/index.js",
    "./dist/*": "./dist/*",
    "./locales/*": "./locales/*"
  },
  "dependencies": {
    "@holochain/client": "^0.16.2",
    "@holochain-open-dev/elements": "^0.7.0",
    "@holochain-open-dev/profiles": "^0.16.1",
    "@holochain-open-dev/stores": "^0.7.2",
    "@holochain-open-dev/utils": "^0.15.1",
    "@lit-labs/context": "^0.2.0",
    "@lit/localize": "^0.11.4",
    "@mdi/js": "^7.2.0",
    "@msgpack/msgpack": "^2.7.2",
    "@shoelace-style/shoelace": "^2.9.0",
    "lit": "^2.6.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.5.7",
    "@lit/localize-tools": "^0.6.3",
    "@open-wc/eslint-config": "^4.3.0",
    "@trivago/prettier-plugin-sort-imports": "^3.4.0",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.0",
    "vite": "^4.0.0",
    "vite-plugin-checker": "^0.5.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "customElements": "custom-elements.json",
  "type": "module"
}
